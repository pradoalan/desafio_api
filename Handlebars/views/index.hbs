<h1 style="text-align: center;">Ingrese un producto</h1>
   <div class="jumbotron container">
        <form action="/productos" method="post">  
            <div class="form-group">
                <label for="nombre">Producto</label>
                <input type="text" name="title" class="form-control" id="nombre">
            </div>
            <div class="form-group">
                <label for="precio" class="form-label">Precio</label>
                <input type="number" name="price" class="form-control" id="precio">
            </div>
            <div class="form-group">
                <label for="urlImagen" class="form-label">Imagen</label>
                <input type="text" name="thumbnail" class="form-control" id="urlImagen">
            </div>
            <input type="submit" value="Crear producto" class="btn btn-primary mx-auto">
            <button class="btn btn-primary mx-auto"><a href="./productos" style="text-decoration:none; color: white">Ir al listado</a></button>
        </form>
    </div>